# Copy to .env and fill in values
YOUTUBE_API_KEY=
# One or more channels (comma/space-separated): @handle, UC..., or full channel URL
# Example: YOUTUBE_CHANNELS=@channel1,@channel2,UCxxxxxxxxxxxxxxxxxxxxxx
YOUTUBE_CHANNELS=
# If relative, this saves next to yt_live_link_saver.js
YOUTUBE_OUTPUT=saved_live_links.txt
YOUTUBE_INTERVAL_SECONDS=3600
# Optional: for uploads-based discovery, scan the latest N uploads (1-50)
YOUTUBE_SCAN_LATEST=50
# Optional: set true to use search.list discovery (very expensive quota)
YOUTUBE_USE_SEARCH=false
